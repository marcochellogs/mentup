<h1>Bookings#index</h1>

<% if @bookings.nil? %>
  <%= 'You have no bookings' %>
<% else %>

  <% @bookings.each do |booking| %>

    <%= booking.date %>
    <%= booking.user.name %>
    <% if booking.review != nil %>
      <%= booking.review.title %>
      <%= booking.review.description %>
    <% elsif current_user != booking.lesson.user %> <%# if you are not the user %>
      <%= link_to 'Leave a review', new_booking_review_path(booking)%>
    <% end %>
    <% if current_user == booking.lesson.user || current_user == booking.user %>
      <%= link_to 'Delete Booking', booking_path(booking), method: :delete %>
    <% end %>

  <% end %>
<% end %>


