<div class="container-main">
  <div class="d-flex justify-content-around row">


    <div class="container-profile border p-3 col-3 text-center ml-4">

      <div class="border-bottom mb-4">
        <% if @user.photo.attached? %>
        <%= image_tag @user.photo, class: "avatar" %>
        <% else %>
          <%= image_tag "student.jpg", class: "avatar" %>
        <% end %>
        <h3><%= @user.name %></h3>
      </div>

      <div class="border-bottom mb-4">
        <div class="border w-75 mx-auto mb-4">
          <p> <em> <%= @user.bio %> </em></p> <br> <br>
        </div>
      </div>

      <div class="border-bottom mb-4">
        <p>ciaociao</p>
        <p>ciaociaociao</p>
        <p>ciao</p>
      </div>

      <div>
      <p><%= @lesson.price %></p>
      </div>
    </div>


    <!--<div>
      <div class="col-6 border">
        <% if current_user == @lesson.user %>
          <%= link_to 'Edit Lesson', edit_lesson_path(@lesson) %>
          <%= link_to "Delete lesson", lesson_path(@lesson), method: :delete, data: { confirm: 'Are you certain you want to delete this?' } %>
        <% else %>
          <%= link_to 'Book Lesson', new_lesson_booking_path(@lesson) %>
        <% end %>
      </div>-->

    <div class="container-reviews col-4 text-center d-flex flex-column">

      <div class="border rounded-sm flex-grow-1 mh-25">
        <p>hello</p>
      </div>

      <div class="border-bottom flex-grow-2" style="height: 30px; margin-bottom: 30px">
      </div>

      <div class="border rounded-sm flex-grow-1">
        <% if @reviews.nil? %>
            <h5>Missing link to go on new review</h5>
          <% else %>
            <% @reviews.each do |review| %>
              <h3><%= review.title %></h3>
              <p><%= review.rating %></p>
              <p><%= review.description %></p>
            <% end %>
        <% end %>
      </div>

    </div>


    <div class="container-booking border p-3 col-3 text-center mr-4">
      <p> These are the dates and times in which this Mentor was already booked: </p>
      <% @bookings.each do |booking| %>
        <%= booking.date %>
        <%= 'for ' + booking.lesson.duration.to_s + ' hours'%>
      <% end %>
    </div>

  </div>
</div>
<%= render 'shared/footer' %>
