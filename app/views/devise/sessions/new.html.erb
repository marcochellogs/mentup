<div class="container form-container bg-white ">
  <div class="container form-header float-left p-3 m-3">
    <h5 class="form-title">Welcome back!<h5 class="form-title form-name">Log in</h5></h5>
  </div>
  <div class="container image-form-container float-left d-flex">
    <div class="container simple-form-container float-left">
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <form>
  <div class="form-inputs">
    <div class="form-group">
      <%= f.input :email,
                  required: false,
                  label: false,
                  placeholder: "Email",
                  autofocus: true,
                  input_html: { autocomplete: "email" },
                  class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.input :password,
                  required: false,
                  label: false,
                  placeholder: "Email",
                  input_html: { autocomplete: "current-password" },
                  class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.input :remember_me,
                  class: "form-control",
                  as: :boolean if devise_mapping.rememberable? %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Log in", class: "form-btn" %>
  </div>
<% end %>
<%= render "devise/shared/links" %>
</div>
  </div>
</div>

