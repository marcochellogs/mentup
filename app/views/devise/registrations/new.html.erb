
<h5 class="form-title">Hello, let's create your profile</h5>
<div class="container w-25 float-left">
<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>
<form>
  <div class="form-inputs">
  <div class="form-group">
    <%= f.input :email,
                placeholder: 'Email: ex. user@domain.com',
                label: false,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "email" },
                class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.input :name,
                placeholder: 'Name: ex. Albert Einstein',
                label: false,
                required: true,
                input_html: { autocomplete: "name" },
                class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.input :bio,
                placeholder: 'Biography',
                label: false,
                input_html: { autocomplete: "bio" },
                class: "form-control" %>
  </div>
  <div class="form-check">
    <%= f.input :is_mentor,
                :label => 'Become a mentor',
                as: :boolean,
                input_html: { autocomplete: "Do you want to be a mentor?" },
                class: "form-check-input" %>
  </div>
  <div class="form-group">
   <%= f.input :password,
                :label => "Password",
                required: true,
                hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                input_html: { autocomplete: "new-password" },
                class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.input :password_confirmation,
                :label => "Password confirmation",
                required: true,
                input_html: { autocomplete: "new-password" },
                class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.input :photo,
                :label => 'Upload your profile picture',
                as: :file,
                class: "form-control-file" %>
  </div>
</div>
  <div class="form-actions">
    <%= f.button :submit,
                 "Sign up",
                  class: "btn btn-form" %>
  </div>
</form>
<% end %>
<%= render "devise/shared/links" %>
</div>
