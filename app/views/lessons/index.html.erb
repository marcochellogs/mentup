<h1>Lessons#index</h1>
<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <%= form_tag lessons_path, method: :get do %>
      <div class="search-form-control form-group">
        <%= text_field_tag :query,
        params[:query],
        class: "form-control search",
        placeholder: "Find a lesson" %>
        <%= submit_tag "Search", class: "btn btn-flat" %>
      </div>
    <% end %>
  </div>
</div>

<div class="container mt-5">
  <div class="row">
  <% @lessons.each do |lesson|%>
    <div class="col-sm">
      <div class="card rounded mt-2 mx-auto" style="width: 18rem">
        <%# if lesson.photo.attached? %>
          <%# = cl_image_tag lesson.photo.key, height: 300, width: 400, crop: :fill %>
        <%# else %>
          <%# <img src="<%= @images.sample% >" style="height: 200px; object-fit: cover;" class="card-img-top img-card " alt=<%= drink.name % >> %>
        <%# end %>
        <% if lesson.user.photo.attached? %>
          <img src="" alt="Profile img">
        <% else %>
         <img src="" alt="placeholder">
        <% end %>

        <div class="card-body" style="background-color: rgb(236, 226, 208)">
          <h5 class="card-title"><%= lesson.name %></h5>
          <%= link_to 'check out ' + lesson.name, lesson_path(lesson), class:'btn btn-success' %>
        </div>
      </div>
    </div>
  <%end%>
  </div>
</div>

<%= render 'shared/footer' %>
