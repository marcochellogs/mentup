<div class="navbar navbar-expand-sm navbar-light navbar-lewagon transparent">
  <%= link_to root_path, class: "navbar-brand" do %>
    <%= image_tag "https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/logo.png" %>
    <% end %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <!--<div class="soraya"> > Categories </div>-->

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if user_signed_in? %>
      <li class="nav-item-lesson">
          <%= link_to "Create a Lesson", new_lesson_path, class: "nav-link text-white" %>
        </li>
        <li class="nav-item">
          <%= link_to "Bookings", bookings_path, class: "nav-link text-white" %>
        </li>
        <li class="nav-item dropdown">
          <% if current_user.photo.attached? %>
            <%=cl_image_tag current_user.photo.key, class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false%>
          <% else %>
            <%= image_tag "https://img.pngio.com/smiling-man-png-high-quality-image-png-arts-png-smiling-man-550_410.png", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <% end %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "Profile", profile_path(current_user), class: "dropdown-item" %>
            <%= link_to "Your bookings", bookings_path, class: "dropdown-item" %>
            <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </li>
      <% else %>
      <li class="nav-item">
          <%= link_to "Create a Lesson", new_user_session_path, class: "nav-link text-white" %>
        </li>
        <li class="nav-item">
        <%= link_to "Sign In", new_user_session_path, class: "nav-link" "btn btn-ghost text-white sign-in-button" %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
